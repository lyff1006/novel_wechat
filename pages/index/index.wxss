/**index.wxss**/
/*轮播*/
.swiper_img{
  height: auto;
  position: relative; 
}
.swiper {
 height: 400rpx;
 width: 94%;
 margin-left:3%; 
 margin-bottom: 20rpx;
}
.swiper_image {
 height: 100%;
 width: 100%;
}
/*用来包裹所有的小圆点  */
.dots{  
  width: 100%;
  height: 20rpx; 
  display: flex;
  flex-direction: row;
  position: absolute;
  left: 200rpx;
  bottom: 20rpx;
}  
/*未选中时的小圆点样式 */
.dot{  
  width: 75rpx;  
  height: 12rpx;   
  border-radius: 20%;
  margin-right: 26rpx;
  background-color: white;
}  
/*选中以后的小圆点样式  */
.active{  
  width: 75rpx;   
  height: 12rpx;
  background-color: #62c2ff;
}  


/*分类*/
.classify{
  color: #ffffff;
  margin: 2% 6% 2% 6%;
  width: 20%;
  height: 100rpx;
  background: linear-gradient(to bottom right,#c9e9fd,#37b0fb);
  float: left;
  text-align: center;
  border-radius: 100%;
  padding-top: 25px;
}
/*微小说*/
.title{
  text-align: center;
  font-size: 30px;
}
.novel_body{
  width: 90%;
  margin-left: 5%
}
.novel_tag{
  background: #87CEFA;
  color: #ffffff;
  float: left;
  padding: 1px 7px 1px 7px;
  margin-right: 5px;
  border-radius: 3px;
}
.novel_title{
  border-bottom: solid #f5f5f5 1px;
  padding: 10px;
  font-size: 15px;
  overflow:hidden;
  text-overflow:ellipsis;
  white-space:nowrap; 
  background: #ffffff;
}
.novel_info{
  width: 86%;
  /*border: solid #C1C1C1 1px;*/
  margin-left: 7%;
  
}
.novel_info_1{
  font-size: 12px;
  color: #C1C1C1;
  text-align: center;
  width: 50%;
  float: left;
}
.novel_info_2{
  font-size: 12px;
  color: #C1C1C1;
  text-align: center;
  width: 100%;
}